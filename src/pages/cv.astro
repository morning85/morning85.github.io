---
import BaseLayout from "../layouts/BaseLayout.astro";
// import HorizontalCard from "../components/HorizontalShopItem.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
import HorizontalShopItem from "@components/HorizontalShopItem.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"
import dayjs from "dayjs";


const posts = (await getCollection("publications"))
  .filter((post) =>
    post.data.auther.startsWith("Asa Tomita") || post.data.auther.startsWith("富田 朝")
  )
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);

dayjs.extend(localizedFormat);
import localizedFormat from "dayjs/plugin/localizedFormat";
// const displayDate = dayjs(pubDate).format("ll")
